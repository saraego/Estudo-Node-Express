

    <!-- Iniciando banner -->
    <div id="top-container" class="container-fluid">
        <h1 id="main-title" class="text-center">Encontre seu emprego</h1>
        <p id="main-subtitle" class="text-center">Vagas para area da tecnologia em Home-Office</p>
        <form id="search-form" class="form-inline" action="/" method="GET">
            <div class="form-group col-md-10" >
                <input type="text" class="form-control" id="job" name="job" placeholder="Digite a vaga que estÃ¡ buscando">
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary">Procurar</button>
            </div>
        </form>
    </div>
    <!-- Fim do Banner -->

    <!-- Inicio da main principal -->
    <main>
        <div id="jobs-container" class="container">
            <div class="row">
                <div class="col-md-12">
                    {{#if search}}
                    <h2 id="job-list-title" class="text-center">Buscando vagas que contem: {{search}}</h2>
                    {{else}}
                    <h2 id="job-list-title" class="text-center">Veja as nossas vagas em destaques</h2>
                    {{/if}}
                    <ul id="job-list" class="list-group">
                        {{#each jobs}}
                        <li class="list-group-item {{#if dataValues.new_job}}new-job{{/if}}">
                            <img src="/img/4500_3_04.jpg" alt="company">
                            <p>{{dataValues.company}}</p>
                            <h2>{{dataValues.title}}</h2>
                            <p>R${{dataValues.salary}}</p>
                            <span class="new-job-label">Nova</span>
                            <a class="btn btn-primary " href="/jobs/view/{{dataValues.id}}">Ver vaga</a>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </main>
    <!-- Fim da main principal -->
