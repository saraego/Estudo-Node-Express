
<!-- Iniciando formulario do adcionar empregos.. -->

<div id="add-form-container" class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">Preenchar o formulário</h1>
        </div>
        <div id="form-box" class="col-md-12">
            <h2 class="text-center">Preencha os dados de forma correta</h2>
            <form action="/jobs/add" method="POST">
                <!-- 1 -->
                <div class="form-group">
                    <label for="title">Título da vaga:</label>
                    <input type="text" class="form-control" id="title" name="title" placeholder="Digite o título da vaga" required>
                    <small id="titleHelp" class="formt-text text-muted">*the title is very important</small>
                </div>
                <!-- 2 -->
                <div class="form-group">
                    <label for="description">Descrição da vaga:</label>
                    <textarea type="text" class="form-control" id="description" name="description" placeholder="Escreva a descrição da vaga" required></textarea>
                </div>
                  <!-- 3 -->
                <div class="form-group">
                    <label for="company">Nome da empresa:</label>
                    <input type="text" class="form-control" id="company" name="company" placeholder="Digite a empresa que vai contratar" required>
                </div>
                  <!-- 4 -->
                <div class="form-group">
                    <label for="email">E-mail para contato:</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Digite o email para contato" required>
                </div>
                <!-- 5 -->
                <div class="form-group">
                    <label for="salary">Salário oferecido:</label>
                    <input type="text" class="form-control" id="salary" name="salary" placeholder="Digite o salario da vaga" required>
                </div>
                <input type="hidden" name="new_job" id="" value="1">
                <button type="submit" class="btn btn-primary">Enviar</button>
            </form>
        </div>
    </div>

</div>
